-- LocalScript w StarterGui
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()

-- Tworzymy GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "HaGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 300)
frame.Position = UDim2.new(0.5, -110, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(0,0,0)
frame.BorderColor3 = Color3.fromRGB(255,0,0)
frame.BorderSizePixel = 3
frame.Parent = screenGui

-- Tytuł
local title = Instance.new("TextLabel")
title.Text = "ha ha ha ha ha"
title.Size = UDim2.new(1,0,0,30)
title.BackgroundColor3 = Color3.fromRGB(0,0,0)
title.TextColor3 = Color3.fromRGB(255,0,0)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20
title.Parent = frame

-- Funkcja tworząca przycisk
local function makeButton(text, order, callback)
    local btn = Instance.new("TextButton")
    btn.Text = text
    btn.Size = UDim2.new(1, -10, 0, 30)
    btn.Position = UDim2.new(0,5,0,35 + (order-1)*35)
    btn.BackgroundColor3 = Color3.fromRGB(30,30,30)
    btn.TextColor3 = Color3.fromRGB(255,0,0)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 18
    btn.Parent = frame
    btn.MouseButton1Click:Connect(callback)
end

-- Speed (przykład: ustawia Humanoid.WalkSpeed)
makeButton("Speed x3", 1, function()
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        hum.WalkSpeed = 48 -- normalnie 16
    end
end)

-- Noclip (przechodzenie przez ściany)
local noclipEnabled = false
makeButton("Noclip", 2, function()
    noclipEnabled = not noclipEnabled
end)

game:GetService("RunService").Stepped:Connect(function()
    if noclipEnabled and char then
        for _, part in pairs(char:GetChildren()) do
            if part:IsA("BasePart") then
                part.CanCollide = false
            end
        end
    end
end)

-- Fly (prosta wersja: zmienia HipHeight)
makeButton("Fly", 3, function()
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        hum.HipHeight = hum.HipHeight + 20
    end
end)

-- Random TP do innego gracza
makeButton("Random TP", 4, function()
    local players = game.Players:GetPlayers()
    if #players > 1 then
        local randomPlayer = players[math.random(1, #players)]
        if randomPlayer ~= player and randomPlayer.Character and randomPlayer.Character:FindFirstChild("HumanoidRootPart") then
            local hrp = char:WaitForChild("HumanoidRootPart")
            hrp.CFrame = randomPlayer.Character.HumanoidRootPart.CFrame + Vector3.new(2,0,0)
        end
    end
end)
